package abused_master.JATMA;

import java.io.File;

import net.minecraftforge.common.config.Configuration;

public class ConfigHandler {
		
    public static Configuration config;
	
	public static boolean SawMillEnabled;
    
    public static void init(File file) {
        config = new Configuration(file);
        syncConfig();
    }
    
    public static void syncConfig() {
        String category;
        
        category = "SawMillEnabled";
        config.addCustomCategoryComment(category, "SawMillEnabled");
        SawMillEnabled = config.getBoolean("SawMillEnabled", category, true, "Enables/Disabled the Saw Mill in game.");
        
        config.save();
    }
}
